mixin repeating(fieldset, toggleName)
  block
  .repeating
    input.repeating__is-empty(name=`attr_${fieldset}_empty`, value='0', type='hidden')
    input.repeating__controller(name=`attr_${fieldset}_editor`, type='hidden')
    .repeating__empty
      - const emptyHeader = `None ${fieldset} left beef`;
      .repeating__header
        span(data-i18n=`none_${fieldset}_repeating`)= emptyHeader
      .repeating__subtitle

    fieldset(class=`repeating_${fieldset}`)
      +block('hidden', true)
      .repeating__edit
        +block('edit', true)

      .repeating__view
        +block('view', true)

      .repeating__delete
        +block('delete', true)
